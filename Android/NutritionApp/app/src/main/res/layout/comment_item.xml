<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/commentBackground"
    android:id="@+id/commentContainer"
    android:padding="11dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_profile_pic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textColor="@color/CommentUserName"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/replyCommentButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/reply"
                    app:tint="@color/TextColorWhiteVsBlack"/>

                <ImageView
                    android:id="@+id/editCommentButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/pencil"
                    android:layout_marginStart="5dp"
                    app:tint="@color/TextColorWhiteVsBlack"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/deleteCommentButton"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/delete"
                    android:layout_marginStart="5dp"
                    app:tint="@color/TextColorWhiteVsBlack"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/commentTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="i love this recipe"
                    android:textSize="16sp"
                    android:textColor="@color/TextColorWhiteVsBlack" />

                <TextView
                    android:id="@+id/commentDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/TextColorWhiteVsBlack"
                    android:textSize="12sp"
                    android:paddingLeft="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/viewMoreRepliesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View more replies"
        android:textSize="10sp"
        android:textColor="@color/TextColorWhiteVsBlack"
        android:paddingTop="4dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/LightGreyForTabs"
        android:visibility="gone" />

</LinearLayout>
