<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:theme="@style/Theme.AppCompat.Light.NoActionBar">

<RelativeLayout
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundPageColor1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteX="-16dp">

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="106dp"
        android:background="@drawable/search_box_background"
        android:drawableStart="@drawable/black_search"
        android:drawablePadding="10dp"
        android:hint="Search for Recipes"
        android:padding="12dp"
        android:textColor="@color/TextColorWhiteVsBlack"
        android:textColorHint="#B3393737"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="306dp"
        android:layout_marginEnd="6dp"
        android:padding="12dp"
        android:text="Search"
        android:textSize="9dp"
        android:backgroundTint="@color/LimeGreenYellow"
        android:textColor="@color/BackgroundPageColor1">

    </Button>

    <!-- THIS HERE FOR ICONS BAR [ HOME, SEARCH, LIST, ACCOUNT ] !-->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/search_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/search_box"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/BackgroundPageColor1"
        app:itemIconTint="@color/bottom_navigation_icon_color"
        app:itemTextColor="@color/GoldenYellow"
        app:menu="@menu/bottom_navigation_bar" />

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>