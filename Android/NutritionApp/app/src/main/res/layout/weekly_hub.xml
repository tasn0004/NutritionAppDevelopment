<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundPageColor1"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_grocery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/BackgroundPageColor1"
        app:tabIndicatorColor="@color/button_selected"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorFullWidth="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_grocery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout_grocery" />

    <ImageView
        android:id="@+id/blurOverlayImageViewWeeklyHub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout_grocery"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/blurOverlayTextWeeklyHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe to view more"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/tag_background"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="@id/blurOverlayImageViewWeeklyHub"
    app:layout_constraintBottom_toBottomOf="@id/blurOverlayImageViewWeeklyHub"
    app:layout_constraintStart_toStartOf="@id/blurOverlayImageViewWeeklyHub"
    app:layout_constraintEnd_toEndOf="@id/blurOverlayImageViewWeeklyHub"
    />

    <!-- THIS HERE FOR ICONS BAR [ HOME, SEARCH, LIST, ACCOUNT ] !-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundPageColor1"
        app:itemIconTint="@color/bottom_navigation_icon_color"
        app:itemTextColor="@color/bottom_navigation_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_bar"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
