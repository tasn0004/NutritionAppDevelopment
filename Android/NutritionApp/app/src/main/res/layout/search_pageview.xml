<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundPageColor2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="vertical"
                            >
                                <!-- Breakfast Section -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:text="Search Results For: "
                                    android:textColor="@color/TextColorWhiteVsBlack"
                                    android:textSize="20sp" />
                                <TextView
                                    android:id="@+id/searchString"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="searchString"
                                    android:textColor="@color/TextColorWhiteVsBlack"
                                    android:textSize="20sp" />
                            </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/GoldenYellow"
                                    android:layout_margin="5dp"/>

                                        <Button
                                            android:id="@+id/cancelSearchButton"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Cancel Search"
                                            android:layout_marginEnd="12dp"
                                            android:layout_marginStart="12dp"
                                            android:textColor="@color/AlwaysBlack"
                                            android:backgroundTint="@color/GoldenYellow"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="8dp" />
                        </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:elevation="5dp"
                app:cardCornerRadius="15dp">

                <com.nutritionapp.RoundedImageView
                    android:id="@+id/recipeImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <!-- Gradient overlay -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay" />

                <!-- Name of the recipe displayed over the image -->
                <TextView
                    android:id="@+id/recipeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="21dp"
                    android:layout_marginBottom="27dp"
                    android:textColor="@color/TextColorWhiteVsBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <!-- Heart icon positioned at the top-right corner -->
                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="1116dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="10dp"/>

                <!-- Favorite icon positioned below the heart icon -->
                <ImageView
                    android:id="@+id/heartIconCount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="126dp"
                    android:layout_marginEnd="2dp"

                    android:clickable="true"
                    android:focusable="true"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
</RelativeLayout>
