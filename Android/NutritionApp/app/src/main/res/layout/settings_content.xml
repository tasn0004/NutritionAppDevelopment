<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackgroundPageColor2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".LoginActivity"
        tools:layout_editor_absoluteX="-96dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/user1"
            app:tint="@color/IconsGoldenVsBlack" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">
        <TextView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/MyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit your Profile Information"
            android:textColor="@color/LightGreyForTabs"
            android:textSize="12sp"
            android:textStyle="italic" />
            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/paymentIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/imageView3"
            app:srcCompat="@drawable/card"
            app:tint="@color/IconsGoldenVsBlack"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/editPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:text="Manage your subscription"
            android:textSize="12dp"
            android:textColor="@color/LightGreyForTabs"
            android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/PromotionIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/paymentIcon"
            app:srcCompat="@drawable/promocode"
            app:tint="@color/IconsGoldenVsBlack"
             />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/Promotions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotions"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/PromoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo code that applies to your payment"
            android:textSize="12sp"
            android:textColor="@color/LightGreyForTabs"
            android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/dieticon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/PromotionIcon"
            app:srcCompat="@drawable/diet"
            app:tint="@color/IconsGoldenVsBlack"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/Diet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PromotionIcon"
            android:text="Diet Preferences"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/dietList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit your diet list"
            android:layout_below="@id/PromotionIcon"
            android:textColor="@color/LightGreyForTabs"
            android:textStyle="italic"
            android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/healthIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/healthcare"
            app:tint="@color/IconsGoldenVsBlack"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Concerns"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/healthConcern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit your health concern list"
            android:textColor="@color/LightGreyForTabs"
            android:textStyle="italic"
            android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/ThemeIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/theme"
                    app:tint="@color/IconsGoldenVsBlack" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/Theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/healthIcon"
                    android:text="Theme"
                    android:textColor="@color/SettingsTextContent"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/themeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjust Your Theme"
                    android:textColor="@color/LightGreyForTabs"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

                </LinearLayout>

                <Switch
                    android:id="@+id/themeSwitch"
                    style="@style/CustomSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="110dp"
                    android:thumb="@drawable/custom_thumb"
                    android:track="@drawable/toggle_selector_theme" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/info"
            app:tint="@color/IconsGoldenVsBlack"
            android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/aboutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About us"
                    android:textColor="@color/LightGreyForTabs"
                    android:textStyle="italic"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/privacyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoIcon"
            app:srcCompat="@drawable/privacy"
            app:tint="@color/IconsGoldenVsBlack"
            android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/Privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:layout_below="@id/infoIcon"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/privacyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read our privacy policy"
                    android:textColor="@color/LightGreyForTabs"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/privacyIcon"
            app:srcCompat="@drawable/exit"
            app:tint="@color/IconsGoldenVsBlack"
            android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textColor="@color/SettingsTextContent"
            android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/profileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out of your profile"
                    android:textColor="@color/LightGreyForTabs"
                    android:textStyle="italic"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>