<!-- toggle_selector_theme.xml in your drawable folder -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- When switch is checked (Light mode) -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/>
                    <corners android:radius="20dp" />
                    <stroke android:width="0.5dp" android:color="@android:color/black" />
                </shape>
            </item>
            <item android:drawable="@drawable/sun"
                android:width="20dp"
                android:height="20dp"
                android:gravity="center_vertical|right"
                android:right="32dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#000000"/>
                    <corners android:radius="20dp" />
                    <stroke android:width="0.5dp" android:color="@android:color/black" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/moon"
                android:width="17dp"
                android:height="17dp"
                android:gravity="center_vertical|left"
                android:left="35dp"/>

        </layer-list>
    </item>
</selector>
