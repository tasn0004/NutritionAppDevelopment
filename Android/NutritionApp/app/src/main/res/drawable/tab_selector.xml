<!-- res/drawable/tab_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" /> <!-- Adjust the radius to control the roundness -->
            <solid android:color="@color/button_selected" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" /> <!-- Adjust the radius to control the roundness -->
            <solid android:color="@color/days_of_week_tab" />
        </shape>
    </item>
</selector>
