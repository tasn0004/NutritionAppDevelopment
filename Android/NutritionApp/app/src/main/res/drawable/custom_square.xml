<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
        </shape>
    </item>
    <!-- White square (this will actually create the "hole") -->
    <item android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <!-- Black smaller square (this will cover the "hole" at the bottom right corner) -->
    <item android:right="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>
            <size android:width="10dp" android:height="10dp"/>
        </shape>
    </item>
</layer-list>
