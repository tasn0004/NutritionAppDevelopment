<!-- res/drawable/banner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8BC34A"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="4dp"/>
            <padding android:bottom="3dp" /> <!-- Smaller bottom padding to simulate shadow depth -->
        </shape>
    </item>
    <!-- Banner Layer -->
    <item android:bottom="2dp"> <!-- Shifted up to overlay the shadow -->
        <shape android:shape="rectangle">
            <solid android:color="#2B2B30"/> <!-- Your banner color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
